<div class="row">
  <div class ="col-md-4 col-md-offset-4">
     <div class="well clearfix">
     
        <%= form_for @contact do |f| %>

          <div class ="form-group">
         <%= f.label :name %>
            <%= f.text_field :name, :placeholder => "Please enter your Name", class: 'form-control' %>
          </div>

          <div class ="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, :placeholder => "Please enter your Email", class: 'form-control' %>
          </div>

          <div class ="form-group">
        <%= f.label :comments %>
        <%= f.text_area :comments, class: 'form-control' %>
          </div>
       
       <div class="row">
    <div class = "col-md-6">
      <div class="pull-left">
        <div class = "counter">140</div> 
      </div>
  </div>
      <div class = "col-md-6">
        <div class = "pull-right">
            <div class="submit">        
              <%= f.submit 'Submit', class: 'btn btn-default' %>
               </div>
             </div>
        </div>
</div>
            
            
        <% end %>
       </div>
  </div>
</div>